# Exemple .env pour usage local (client final)
# Objectif : authentification sur PostgreSQL 18 distant, pas de Stripe/Email côté client

# Réseau / protocole
FORCE_HTTP=1
QUIET_MODE=1
NODE_ENV=production
PORT=3000
PUBLIC_BASE_URL=http://localhost:3000
NO_ADB=1

# Base de données (obligatoire pour la synchro comptes)
# Remplacer par un utilisateur Postgres restreint et un hôte accessible depuis la machine cliente
DATABASE_URL=postgresql://<pg_user_restreint>:<motdepasse_fort>@<hote_pg>:5432/<base_pg>
DATABASE_SSL=true
PGSSLMODE=require

# Secrets applicatifs (générer des valeurs uniques par client)
JWT_SECRET=<change_me_jwt_secret>
LICENSE_SECRET=<change_me_license_secret>

# SMTP (désactivé côté client ; laisser vide)
EMAIL_ENABLED=false
BREVO_SMTP_HOST=smtp-relay.brevo.com
BREVO_SMTP_PORT=587
BREVO_SMTP_USER=
BREVO_SMTP_PASS=
EMAIL_FROM=noreply@vhr-dashboard.com

# Stripe (laisser vide si non utilisé en local)
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# SQLite fallback (non utilisé si DATABASE_URL est défini, conservé pour compatibilité)
DB_SQLITE_FILE=./data/vhr.db
